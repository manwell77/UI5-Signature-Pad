<core:View xmlns:core="sap.ui.core" 
           xmlns:mvc="sap.ui.core.mvc" 
           xmlns="sap.m"
           xmlns:l="sap.ui.layout"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns:pad="sap.ui.root.webapp.control"
           controllerName="sap.ui.root.webapp.sign">
	<Page title="Basic">
   		<headerContent>
			<Button tooltip="Confirm signature" icon="sap-icon://signature" press="onSigned" />
		</headerContent>
		<content>	 		
			<pad:signaturePad width="100%" height="100%" margin="true" penColorSet="Small"></pad:signaturePad>	
 		</content>
	</Page>
</core:View>